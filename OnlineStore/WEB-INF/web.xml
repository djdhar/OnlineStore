<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">




    
    <servlet>
    <servlet-name>LoginPage</servlet-name>
    <jsp-file>/Login.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginPage</servlet-name>
        <url-pattern>/LoginPage</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>RegisterPage</servlet-name>
    <jsp-file>/Register.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterPage</servlet-name>
        <url-pattern>/RegisterPage</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>login</servlet-name>
    <servlet-class>Login</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>register</servlet-name>
    <servlet-class>Register</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/Register</url-pattern>
    </servlet-mapping>
	<servlet>
	    <servlet-name>SearchBox</servlet-name>
	    <servlet-class>SearchBox</servlet-class>
    </servlet>

   <servlet-mapping>
        <servlet-name>SearchBox</servlet-name>
        <url-pattern>/SearchBox</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>ONLINESTORE</param-name>
        <param-value>jdbc:mysql://localhost:3306/ONLINESTORE</param-value>
    <context-param>

     <context-param>
        <param-name>ONLINESTOREUser</param-name>
        <param-value>root</param-value>
    <context-param>

     <context-param>
        <param-name>ONLINESTOREPwd</param-name>
        <param-value>12345</param-value>
    <context-param>



</web-app>
